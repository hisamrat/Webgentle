@model BookModel
<div class="card m-md-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl)?"/images/null.png":Model.CoverImageUrl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title)?"Name is not available":Model.Title)</h3>
        <p class="card-text"> @Model.Description</p>
        <p class="card-text">@Model.Language</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-action="getbook" asp-controller="book" asp-route-id="@Model.Id" asp-route-nameofbook="@Model.Title" class="btn btn-outline-secondary"> view detils</a>

            </div>
            <div class="btn-group">
                <a asp-action="Delete" asp-controller="book" asp-route-id="@Model.Id" asp-route-nameofbook="@Model.Title" class="btn"><img style="width:30px" src="~/images/807714.png"></a>

            </div>
            <div class="btn-group">

                <a asp-action="Edit" asp-controller="book" asp-route-id="@Model.Id" asp-route-nameofbook="@Model.Title" class="btn"> <img style="width:30px" src="~/images/Pencil-icon.png"></a>

            </div>

            <small class="text-muted">@Model.Author</small>
        </div>


    </div>
</div>